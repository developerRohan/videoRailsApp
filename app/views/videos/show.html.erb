<p id="notice"><%= notice %></p>

<div class="row">
	<div class="col m3">
		<div class="collection">
        <% @videos.each do |video| %>
        	<%= link_to video.title , video , :class => 'collection-item' %>
        <% end %> 
      </div>
	</div>
	<div class="col m9">
        <div class="col s12">
          <div class="card blue-grey darken-1">
          	<div class="card-image">
          		<div class="wistia_embed wistia_<%= @video.wistia%> " , style="height:360px">&nbsp;</div>	
          	</div>
          	
          	<div class="card-content white-text">
              <span class="card-title"><%= @video.title%></span>
              <p><%=@video.description%></p>
            </div>
            <div class="card-action">
              <%= link_to "PREVIOUS" , @previousVideo if !@previousVideo.nil? %>
              <%= link_to "NEXT" , @nextVideo if !@nextVideo.nil? %>
            </div>
          </div>
        </div>
	</div>	
</div>
<script charset="ISO-8859-1" src="//fast.wistia.com/assets/external/E-v1.js" async></script>
<script >
	wistiaEmbed = Wistia.embed("<%= @video.wistia%> ",{
		videoQuality: "hd-only",
		videoFoam: true
	});
</script>
